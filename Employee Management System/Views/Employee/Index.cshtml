@model List<Employee_Management_System.Models.Domain.Employee>
@{
}
<h1>Employees</h1>
<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Email</th>
            <th>Salary</th>
            <th>Date of Birth</th>
            <th>Department</th>
            <th></th>
        </tr>
    </thead>
    <tbody>

        @if (Model != null)
        {
            @foreach (var employee in Model)
            {
                <tr>
                    <td>@employee.ID</td>
                    <td>@employee.Name</td>
                    <td>@employee.Email</td>
                    <td>@employee.Salary</td>
                    <td>@employee.DateOfBirth</td>
                    <td>@employee.Department</td>
                    <td><a href="@Url.Action("Edit", "Employee", new { id = employee.ID })">Edit</a></td>
                </tr>
            }
        }
    </tbody>
</table>

