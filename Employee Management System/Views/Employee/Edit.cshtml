@model Employee_Management_System.Models.UpdateEmployeeViewModel
@{
}
<style>
    h1 {
        position: center;
    }
</style>
<h1>Edit Employee</h1>

<form method="post" action="Edit" class="mt-5">
    <div class="form-group">
        <label for="">Id</label>
        <input type="text" class="form-control" asp-for="ID" readonly>
    </div>
    <div class="form-group">
        <label for="">Name</label>
        <input type="text" class="form-control" asp-for="Name">
    </div>
    <div class="form-group">
        <label for="">Email</label>
        <input type="email" class="form-control" asp-for="Email">
    </div>
    <div class="form-group">
        <label for="">Date of Birth</label>
        <input type="date" class="form-control" asp-for="DateOfBirth">
    </div>
    <div class="form-group">
        <label for="">Salary</label>
        <input type="number" class="form-control" asp-for="Salary">
    </div>
    <div class="form-group">
        <label for="">Department</label>
        <input type="text" class="form-control" asp-for="Department">
    </div>
    <br />
    <button type="submit" class="btn btn-success">Submit</button>
    <button type="submit" class="btn btn-danger" asp-action="Delete" asp-controller="Employee">Delete</button>
</form>

